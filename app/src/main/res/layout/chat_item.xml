<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layoutDirection="ltr">


    <TextView
        android:id="@+id/chat_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rounded_chat_item"
        android:ellipsize="none"
        android:ems="0"
        android:padding="1dp"
        android:text="هذه مثال لنص تجريبي يمكن استبداله لاحقا"
        android:textColor="@color/colorAccent"
        android:textDirection="rtl"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_item_username_tv" />

    <TextView
        android:id="@+id/chat_item_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorAccent"
        android:textDirection="rtl"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="احمد زكريا" />
</androidx.constraintlayout.widget.ConstraintLayout>