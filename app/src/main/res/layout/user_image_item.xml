<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="?backgroundColor"
    android:orientation="vertical"
    android:padding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="2dp"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="true"
        app:strokeWidth="1dp"
        card_view:cardBackgroundColor="?backgroundColor">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_image_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:src="@drawable/hourglass" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_image_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@color/transparentGrey"
            android:padding="2dp"
            android:src="@drawable/ic_report"
            android:tint="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_image_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@color/transparentGrey"
            android:padding="2dp"
            android:src="@drawable/ic_arrow_downward"
            android:tint="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_image_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="2dp"
            android:src="@drawable/ic_delete_x"
            android:tint="@color/colorAccent"
            android:visibility="gone" />

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>