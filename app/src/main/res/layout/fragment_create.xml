<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".CreateFragment">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/photoEditorView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ja.burhanrashid52.photoeditor.PhotoEditorView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/photoEditorBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/editor_nav_menu" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/undo_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_undo"
        android:tint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/photoEditorBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/redo_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_redo"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/undo_btn"
        app:layout_constraintStart_toEndOf="@+id/undo_btn"
        app:layout_constraintTop_toTopOf="@+id/undo_btn" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/increment_brush_size_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_plus_2"
        android:tint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/photoEditorBottomBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/decrement_brush_size_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_mins_2"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/increment_brush_size_btn"
        app:layout_constraintEnd_toStartOf="@+id/increment_brush_size_btn"
        app:layout_constraintTop_toTopOf="@+id/increment_brush_size_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>