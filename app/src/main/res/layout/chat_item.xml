<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        style="@style/Widget.MaterialComponents.CardView"
        android:padding="8dp"
        app:cardBackgroundColor="?editTextBackgroundColor"
        app:strokeColor="?textHintColor"
        app:strokeWidth="0.5dp"
        app:cardCornerRadius="16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chat_item_username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/circular_color"
                    android:drawablePadding="8dp"
                    android:padding="4dp"
                    android:text="@string/app_name"
                    android:textColor="?textColor"
                    android:textDirection="rtl"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/chat_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="8dp"
                android:text="@string/text_sample"
                android:textColor="@color/white"
                android:textDirection="rtl"
                android:textSize="20sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

</androidx.appcompat.widget.LinearLayoutCompat>